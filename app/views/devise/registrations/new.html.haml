.wrapper
  = render "header";

  .signin
    .contents
      .contents__top
        %h2 会員情報入力
      .contents__bottom
        = form_for(resource, as: resource_name, url: user_registration_path(resource_name)) do |f|
          = render "devise/shared/error_messages", resource: resource
          .field
            .title
              = f.label :メールアドレス
              %span 必須
            = f.email_field :email, autofocus: true, placeholder: "例）PC・携帯どちらでも可", autocomplete: "email"
          %br/
          .field
            .title
              = f.label :パスワード
              %span 必須
            %p.password ※英語と数字の両方を含めて設定してください
            = f.password_field :password, placeholder: "例）７文字以上の半角英数字", autocomplete: "new-password"
          %br/
          .field
            .title
              = f.label :パスワード（確認用）
              %span 必須
            = f.password_field :password_confirmation, placeholder: "例）パスワードと同じものを入力", autocomplete: "new-password"

          %h3 本人確認
          %p.notes 安心・安全にご利用いただくために、お客さまの本人情報の登録にご協力ください。他のお客さまに公開されることはありません。
          .field
            .title
              = f.label :お名前（全角）
              %span 必須
            = f.text_field :last_name, placeholder: "例）田中", autofocus: true, autocomplete: "family-name"
            %br/
            = f.text_field :first_name, placeholder: "例）太郎", autofocus: true, autocomplete: "given-name"
          %br/
          .field
            .title
              = f.label :お名前カナ（全角）
              %span 必須
            = f.text_field :lastname_kana, autofocus: true, placeholder: "例）タナカ", autocomplete: "family-name"
            %br/
            = f.text_field :firstname_kana, autofocus: true, placeholder: "例）タロウ", autocomplete: "given-name"
          %br/
          .field
            .title
              = f.label :生年月日
              %span 必須
            = f.date_select :birthdate_day, {start_year: (Time.now.year - 100), end_year: (Time.now.year), include_blank: true}, autofocus: true, autocomplete: "bday"
          %br/
          .field
            = f.submit '次へ進む', class: "btn"
        = render "devise/shared/links"

= render "products/footer";